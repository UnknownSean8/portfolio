<script>
    let textContent: HTMLTextAreaElement | null = null;
    document.addEventListener("astro:page-load", () => {
        const sendChat = document.getElementById("sendChat");
        textContent = document.querySelector("textArea");
        sendChat?.addEventListener("click", () => {
            submitNewChat();
        });

        let typingTimer: NodeJS.Timeout;
        textContent?.addEventListener("keypress", (e) => {
            const event = e as KeyboardEvent;
            if (event.key === "Enter" && !event.shiftKey) {
                e.preventDefault();
                submitNewChat();
            }

            const textCaption = document.getElementById("textCaption");
            if (textCaption) textCaption.textContent = "Typing...";

            clearTimeout(typingTimer);

            typingTimer = setTimeout(() => {
                if (textCaption) textCaption.textContent = "";
            }, 1000);
        });
    });

    function submitNewChat() {
        const sendTextArea = document.getElementById("sendTextArea");
        const replyTextBubble = document.getElementById("replyTextBubble");
        sendTextArea?.setAttribute("hidden", "true");

        const textValue = (textContent as HTMLTextAreaElement).value;

        const chatReply = document.getElementById("chatReply");
        if (chatReply) {
            chatReply.textContent = textValue;
        }
        replyTextBubble?.removeAttribute("hidden");
    }
</script>

